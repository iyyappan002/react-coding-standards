---
import "../styles/base.css";
const { logo, title, description, imgClass, siteUrl } = Astro.props;
---

<div class="relative max-w-sm">
    <span
        class="absolute top-0 left-0 w-full h-full mt-1 ml-1 bg-green-500 rounded-lg"
    ></span>
    <div
        class="relative h-full p-3 bg-white border-2 border-green-500 rounded-lg"
    >
        <div class="flex items-center -mt-1">
            <img src={logo} class={imgClass} />
            <div class="my-2 ml-3 text-lg font-bold text-gray-800">{title}</div>
        </div>

        <p class="my-2 text-gray-600">
            {description}
        </p>

        <a
            href={siteUrl}
            target="_blank"
            class="block pb-1 mt-8 text-base font-black text-blue-600 uppercase border-b border-transparent hover:border-blue-600"
        >
            Visit site ->
        </a>
    </div>
</div>
